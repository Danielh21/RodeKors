<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
   
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/fullcalendar")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetimepicker")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendar.css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/datetimepicker/css")




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="col-md-12">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                    @Html.ActionLink("HSK Samariter - Vagtmanager 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <li>@Html.ActionLink("Min Kalender", "MyCalendar", "Calendar")</li>
                            <li>@Html.ActionLink("Min Profil", "EditUser", "Account")</li>
                            
    }

    @if (HttpContext.Current.User.IsInRole("Vagtkoordinator"))
    {
            <li>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Koordinator opgaver
                <span class="caret"></span>
            </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Opret Ny Bruger", "Register", "Account")</li>
                    <li>@Html.ActionLink("Opret Nyt Vagtkort", "NewVagtkortStart", "VagtKort")</li>
                    <li>Item</li>
                </ul>
            </li>
                
    }

@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    <li>@Html.Partial("_LoginPartial")</li>
}
                <!-- Here Goes links to Sites, and Controlers:
                Like this: <li>@Html.ActionLink("LinkText", "actionName", "ControllerName" )
                Example: <li>@Html.ActionLink("Home", "Index", "Home")</li>-->
    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">

        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vagtmanager 2.0 </p>
        </footer>
    </div>

    
    @RenderSection("scripts", required: false)
</body>
</html>
